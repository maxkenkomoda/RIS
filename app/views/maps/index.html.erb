<h1>Google Map</h1>
  <div id="map" class="map"></div>

    <script>
      <!-- google map initialaize -->
      var map;
      var myLocation = {lat: 34.809006620739176, lng: 135.5614241910291};
      

      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
          center: myLocation,
          zoom: 12
        });
        
        //create marker
        var marker = new google.maps.Marker ({
          position: myLocation,
          map: map,
          draggable: true
        });



        map.addListener('click', function(mapsMouseEvent) {
          //alert(`lat:${latLng.lat}, lng:${latLng.lng}`);
          marker.setMap(null);
          
          //create new marker
          marker = new google.maps.Marker ({
            position: mapsMouseEvent.latLng,
            map: map
          });
        });
      }
            // define lat lng for showing on html
            //var lat = latLng.lat();
            //var lng = latLng.lng();
      

    </script>
